# Allow access just to all sub-paths.
<LocationMatch "^/git/.*">
    <IfModule !mod_access_compat.c>
        Require all granted
    </IfModule>
    <IfModule mod_access_compat.c>
        Order allow,deny
        Allow from all
    </IfModule>
</LocationMatch>

# https://docs.gitea.com/administration/reverse-proxies#apache-httpd-with-a-sub-path
<VirtualHost *:80>
    ProxyPreserveHost On
    ProxyRequests Off
    ServerName {{ server_name }}
    AllowEncodedSlashes NoDecode
    RewriteEngine On
    RewriteRule "^/git$" "/git/" [R]
    <Location "/git/">
        ProxyPass http://localhost:{{ port_gitea }}/ nocanon
        ProxyPassReverse http://localhost:{{ port_gitea }}/
    </Location>
</VirtualHost>
