# Allow access just to all sub-paths.
<LocationMatch "^/nexus/.*">
    <IfModule !mod_access_compat.c>
        Require all granted
    </IfModule>
    <IfModule mod_access_compat.c>
        Order allow,deny
        Allow from all
    </IfModule>
</LocationMatch>

# https://help.sonatype.com/repomanager3/planning-your-implementation/run-behind-a-reverse-proxy#RunBehindaReverseProxy-Apachehttpd.1
<VirtualHost *:80>
    ProxyPreserveHost On
    ProxyRequests Off
    ServerName {{ server_name }}
    RewriteEngine On
    RewriteRule "^/nexus$" "/nexus/" [R]
    <Location "/nexus/">
        ProxyPass http://localhost:{{ port_nexus }}/
        ProxyPassReverse http://localhost:{{ port_nexus }}/
    </Location>
</VirtualHost>

# Necessary for http://packages to proxy to nexus.
<VirtualHost *:80>
    ProxyPreserveHost On
    ProxyRequests Off
    AllowEncodedSlashes NoDecode
    ProxyTimeout 300
    ServerName packages
    ServerAlias packages
    ProxyPass / http://localhost:{{ port_nexus }}/ nocanon
    ProxyPassReverse / http://localhost:{{ port_nexus }}/
</VirtualHost>

# Necessary for http://packages.mtl to proxy to nexus.
<VirtualHost *:80>
    ProxyPreserveHost On
    ProxyRequests Off
    AllowEncodedSlashes NoDecode
    ProxyTimeout 300
    ServerName packages.mtl
    ServerAlias packages.mtl
    ProxyPass / http://localhost:{{ port_nexus }}/ nocanon
    ProxyPassReverse / http://localhost:{{ port_nexus }}/
</VirtualHost>
